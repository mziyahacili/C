<Window x:Class="_5._12._2023_AbstractFactory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5._12._2023_AbstractFactory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="To-Do List" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBox x:Name="taskTextBoxControl" Margin="0,0,0,10"/>

            <Button x:Name="addButtonControl" Content="Add Task" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10"
                    Click="AddTaskButton_Click"/>

            <ListBox x:Name="taskListBoxControl" Width="300" Height="150" Margin="0,0,0,10"/>

            <Button Content="Remove Task" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10"
                    Click="RemoveTaskButton_Click"/>

            <Button Content="Mark as Done" Width="100" HorizontalAlignment="Left"
                    Click="MarkAsDoneButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
